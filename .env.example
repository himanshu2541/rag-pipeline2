OPENAI_API_KEY="sk-..."

# --- Pinecone ---
# Get from: https://app.pinecone.io/

PINECONE_API_KEY="..."

# This MUST be an existing Pinecone index.
# It must be configured with the correct dimension for embedding model.
# text-embedding-3-small dimension = 1536
# text-embedding-3-large dimension = 3072
# text-embedding-ada-002 dimension = 1536

PINECONE_INDEX_NAME="your-rag-index-name"

# --- RAG Config (Optional) ---
# You can override these defaults
# --- Embedding Model Selection ---
# Use "openai" or "local"

# EMBEDDING_PROVIDER="openai"
# EMBEDDING_MODEL="text-embedding-3-small"

# --- To use a local model like all-MiniLM-L6-v2 ---

# 1. Set the provider and model

EMBEDDING_PROVIDER="local"
EMBEDDING_MODEL="all-MiniLM-L6-v2"

# 2. IMPORTANT: Your Pinecone index MUST match the model's dimension.

# all-MiniLM-L6-v2 has dimension = 384

# You will need a new Pinecone index for this.

# --- LLM Model ---
LLM_MODEL="gpt-4o-mini"
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
BM25_WEIGHT=0.4
PINECONE_WEIGHT=0.6